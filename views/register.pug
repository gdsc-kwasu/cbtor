extends layout

block content
  .container-fluid
    .row
      .col-12.col-sm-8.col-md-7.d-none.bg-primary.d-md-flex.align-items-center.position-fixed.app-bg
        .row.justify-content-center
          .col-md-10.offset-md-2.py-5.text-light
            h1.hero-text Welcome to the Cbt App
            p.mt-5.hero-text__info Giving you the real-life Computer Based Test experience

    .row.justify-content-end.py-0.py-md-5
      .col-12.col-sm-12.col-md-5.d-block.d-md-flex.align-items-center.px-md-4.bg-student-sm
        .row.d-flex.d-md-none.text-white.my-4
          .col-12.text-center.text-white
            h3.text-uppercase.text-white Welcome to the CBT App
            p Giving you the real-life Computer Based Test experience

        .row.px-2.px-md-5.bg-student-sm__container
          .col-12
            div.text-center.mb-4
              img.school-logo.text-center(src="/images/kwasu.png" alt="school logo")
            h1.text-uppercase.font-weight-bolder.block-title.text-center.text-md-left Register for an Account
          .col-12.py-5
            #app

block scripts
  script(src='/build/js/app.js' type='text/javascript')
  script(src="https://cdnjs.cloudflare.com/ajax/libs/notify/0.4.2/notify.min.js")
  if flashes.error
    script.
      const errors = !{JSON.stringify(flashes.error)}
        errors.forEach(function(err) {
            $.notify(err.msg, 'error');
        })
    
